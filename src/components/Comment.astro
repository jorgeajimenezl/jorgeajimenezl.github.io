---
import FormattedDate from "@components/FormattedDate.astro";

interface Props {
  id?: string;
  author: string;
  date: Date;
  content: string;
}

const { id, author, date, content } = Astro.props as Props;
---

<li class="rounded-lg border border-black/10 dark:border-white/10 p-4" id={id}>
  <div class="flex items-center gap-2 mb-2">
    <span class="font-medium text-black dark:text-white">{author}</span>
    <span class="text-black/40 dark:text-white/40">â€¢</span>
    <span class="text-sm text-black/60 dark:text-white/60">
      <FormattedDate date={date} />
    </span>
  </div>
  <p class="prose prose-sm dark:prose-invert m-0">
    {content}
  </p>
</li>

